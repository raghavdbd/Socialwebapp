
        <h1>Codial.<%=title%></h1>
        

        
        <section id="feed-posts">
                <h4>posts</h4>
                <form action="/post/create" id="new-post-form" method="POST">
                    <textarea name="content" id="" cols="30" rows="3" placeholder="typehere...."></textarea>
                    <input type="submit" value="post">
                </form>
                <div id="posts-list-container">
                        <ul>
                            <% for(post of posts){%>
                                <li>
                                    <%=post.content%>
                                    <br>
                                    <small>
                                        <%=post.user.name%>
                                    </small>
                                </li>
                               
                            <%}%>
                        </ul>
                    </div>
    
            </section> 
